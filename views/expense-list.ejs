<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <style>
      body {
        padding-top: 70px; /* Add padding to prevent overlap with the navbar */
      }
    </style>
  </head>

  <body>
    <%- include('partials/navbar') %>

    <div class="container my-5">
      <%- include("./flash.ejs") %>

      <h1 class="text-center mb-4">Expense List</h1>
      
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Category</th>
            <th>Amount (â‚¹)</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (expenses.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center">No expenses found.</td>
            </tr>
          <% } else { %>
            <% expenses.forEach((expense, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= expense.category %></td>
                <td>&#8377;<%= expense.amount.toLocaleString("en-IN")%></td>
                <td><%= expense.description %></td>
                <td>
                  <a href="/delete/<%= expense._id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
